generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  balance   Int      @default(1000)
  createdAt DateTime @default(now())
}

model Match {
  id         String   @id @default(cuid())
  creatorId  String
  opponentId String?
  stake      Int
  status     String   @default("open")
  winnerId   String?
  gameMode   String   @default("1v1 Box Fight")
  createdAt  DateTime @default(now())
}
